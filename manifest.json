{
  "name": "TwineForge",
  "short_name": "TwineForge",
  "version": "1.4",
  "description": "Lightweight MV3 helper UI for Twine/SugarCube.",
  "manifest_version": 3,
  "action": { "default_title": "TwineForge" },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["file:///*", "http://localhost/*", "http://127.0.0.1/*"],
  "background": { "service_worker": "background.js" },
  "web_accessible_resources": [{
    "resources": ["twinehacker.js", "twinehacker.css", "show-custom-globals.js", "Icons/*", "Skins/*"],
    "matches": ["file:///*", "http://localhost/*", "http://127.0.0.1/*"]
  }],
  "icons": { "16": "Icons/16.png", "48": "Icons/48.png", "128": "Icons/128.png" },
  "commands": {
    "enable_twine_hacker": {
      "suggested_key": { "default": "Ctrl+Shift+H" },
      "description": "Inject TwineForge panel"
    },
    "reset_panel_geometry": {
      "suggested_key": { "default": "Ctrl+Shift+R" },
      "description": "Reset TwineForge window position and size"
    }
  }
}
