{
  "name": "TwineForge",
  "short_name": "TwineForge",
  "version": "1.4",
  "description": "Lightweight helper UI for Twine/SugarCube (Firefox build).",
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "twineforge@local"
    }
  },
  "browser_action": {
    "default_title": "TwineForge"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "http://localhost/*",
    "http://127.0.0.1/*",
    "file:///*"
  ],
  "background": {
    "scripts": ["background-firefox.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "twinehacker.js",
    "twinehacker.css",
    "show-custom-globals.js",
    "Icons/*",
    "Skins/*"
  ],
  "commands": {
    "enable_twine_hacker": {
      "suggested_key": { "default": "Ctrl+Shift+H" },
      "description": "Inject TwineForge panel"
    },
    "reset_panel_geometry": {
      "suggested_key": { "default": "Ctrl+Shift+R" },
      "description": "Reset TwineForge window position and size"
    }
  },
  "icons": {
    "16": "Icons/16.png",
    "48": "Icons/48.png",
    "128": "Icons/128.png"
  }
}
